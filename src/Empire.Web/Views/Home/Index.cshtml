@{
    ViewData["Title"] = "Welcome";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0" style="border-radius: 20px;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="fas fa-mobile-alt fa-4x text-primary mb-3"></i>
                            <h1 class="display-4 fw-bold text-primary">Empire Solution</h1>
                            <p class="lead text-muted">Professional Phone Repair Management System</p>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-tools fa-2x text-primary mb-2"></i>
                                    <h5>Repair Management</h5>
                                    <p class="small text-muted">Track and manage all repair orders efficiently</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-boxes fa-2x text-primary mb-2"></i>
                                    <h5>Inventory Control</h5>
                                    <p class="small text-muted">Manage parts and accessories inventory</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                    <h5>Customer Management</h5>
                                    <p class="small text-muted">Keep track of customer information and history</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Login" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Get Started
                            </a>
                        </div>
                        
                        <div class="mt-4 p-3 bg-light rounded">
                            <h6 class="mb-2">Demo Credentials</h6>
                            <p class="small mb-1"><strong>Username:</strong> admin</p>
                            <p class="small mb-0"><strong>Password:</strong> admin123</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<Empire.Application.DTOs.Customer.CustomerDto>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>Customer Management</h2>
    <div>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createCustomerModal">
            <i class="fas fa-plus me-2"></i>Add New Customer
        </button>
        <button type="button" class="btn btn-info" onclick="importCustomers()">
            <i class="fas fa-upload me-2"></i>Import Customers
        </button>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Search & Filter</h5>
        <form id="customerFilterForm" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" name="search" placeholder="Name, phone, or email...">
            </div>
            <div class="col-md-3">
                <label class="form-label">City</label>
                <input type="text" class="form-control" name="city" placeholder="Enter city">
            </div>
            <div class="col-md-3">
                <label class="form-label">State</label>
                <input type="text" class="form-control" name="state" placeholder="Enter state">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="button" class="btn btn-primary" onclick="applyCustomerFilters()">
                        <i class="fas fa-search"></i>
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="clearCustomerFilters()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Customers Table -->
<div class="card">
    <div class="card-body">
        <table class="table table-striped data-table" id="customersTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Total Repairs</th>
                    <th>Last Visit</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <strong>@customer.FirstName @customer.LastName</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Phone))
                            {
                                <a href="tel:@customer.Phone">@customer.Phone</a>
                            }
                            else
                            {
                                <span class="text-muted">No phone</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Email))
                            {
                                <a href="mailto:@customer.Email">@customer.Email</a>
                            }
                            else
                            {
                                <span class="text-muted">No email</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Address))
                            {
                                <span>@customer.Address</span>
                                @if (!string.IsNullOrEmpty(customer.City))
                                {
                                    <br><small class="text-muted">@customer.City, @customer.State @customer.ZipCode</small>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No address</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">0</span>
                        </td>
                        <td>
                            <small class="text-muted">@customer.CreatedDate.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary" onclick="viewCustomer(@customer.Id)">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button type="button" class="btn btn-outline-warning" onclick="editCustomer(@customer.Id)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-outline-success" onclick="createRepairForCustomer(@customer.Id)">
                                    <i class="fas fa-tools"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger" onclick="deleteCustomer(@customer.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Customer Modal -->
<div class="modal fade" id="createCustomerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createCustomerForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name *</label>
                            <input type="text" class="form-control" name="firstName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name *</label>
                            <input type="text" class="form-control" name="lastName" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="phone">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="address">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">City</label>
                            <input type="text" class="form-control" name="city">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">State</label>
                            <input type="text" class="form-control" name="state">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">ZIP Code</label>
                            <input type="text" class="form-control" name="zipCode">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" name="notes" rows="3" placeholder="Any additional notes about the customer"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Customer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function applyCustomerFilters() {
            console.log('Applying customer filters...');
        }

        function clearCustomerFilters() {
            document.getElementById('customerFilterForm').reset();
            $('#customersTable').DataTable().search('').draw();
        }

        function viewCustomer(id) {
            console.log('Viewing customer:', id);
        }

        function editCustomer(id) {
            console.log('Editing customer:', id);
        }

        function createRepairForCustomer(id) {
            console.log('Creating repair for customer:', id);
            // Redirect to repair creation with customer pre-selected
            window.location.href = '/Repairs/Create?customerId=' + id;
        }

        function deleteCustomer(id) {
            if (confirm('Are you sure you want to delete this customer?')) {
                console.log('Deleting customer:', id);
            }
        }

        function importCustomers() {
            console.log('Opening import customers dialog...');
        }

        // Handle form submission
        document.getElementById('createCustomerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            console.log('Creating customer...');
        });
    </script>
}

